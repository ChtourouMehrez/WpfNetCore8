<Application x:Class="SimpleTrade.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleTrade.WPF"
             xmlns:views="clr-namespace:SimpleTrade.WPF.Views"
             xmlns:viewModels="clr-namespace:SimpleTrade.WPF.ViewModels"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Common.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        
            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomeView/>
             </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:PortfolioViewModel}">
                <views:PortfolioView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
